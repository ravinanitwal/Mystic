<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#ffffff"
    >

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile"
        android:id="@+id/proPic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proPic"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Ravina Nitwal"
        android:textStyle="italic"
        android:textColor="#360951"
        android:textSize="21sp"
        android:id="@+id/txtName"
        android:textAllCaps="true"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=
            "Mystic: Version 1.0\nThis App Was Designed during the Winter vacations.\nAll Rights Reserved.\nWarlord Corporation Limited."
        android:layout_below="@id/txtName"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textStyle="normal"
        android:id="@+id/txt"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/txt"
        android:id="@+id/social"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/github"
            android:id="@+id/git"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ig"
            android:id="@+id/ig"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/google"
            android:id="@+id/gplus"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/twitter"
            android:id="@+id/twitter"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/fb"
            android:id="@+id/fb"

            />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/abc"
        android:paddingLeft="172dp"
        android:layout_below="@id/social"
        android:textColor="#360951" />



</RelativeLayout>